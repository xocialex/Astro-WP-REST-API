---
import Layout from "../layouts/Layout.astro";
//import Card from '../components/Card.astro';
import ListPostItem from "../components/ListPostItem.astro";
---

<Layout title="Welcome to my blog.">
	<main>
		<h1>Welcome to <span class="text-gradient">WORDPRESS</span></h1>
		<ListPostItem />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 805;
		max-width: calc(100% - 2rem);
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 1em;
		color: #fff;
		text-align: center;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
